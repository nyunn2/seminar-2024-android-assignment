<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/app_nav_graph"
             app:startDestination="@id/FavoriteMoviesFragment">

    <fragment
        android:id="@+id/FavoriteMoviesFragment"
        android:name="com.wafflestudio.waffleseminar2024.viewPagerFragments.FavoriteMoviesFragment"
        android:label="Favorite Movies">
        <action
            android:id="@+id/action_to_AppMovieDetailFragment"
            app:destination="@id/MovieDetailFragment" />
        <argument
            android:name="movieList"
            app:argType="com.wafflestudio.waffleseminar2024.Movie[]" />
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/AppMovieDetailFragment"
        android:name="com.wafflestudio.waffleseminar2024.viewPagerFragments.AppMovieDetailFragment"
        android:label="App Movie Detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>